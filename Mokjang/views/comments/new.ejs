<%- include("../partials/header") %>
<div class="container main"> 
<div class="container">
	<h1 style="text-align:center">댓글 올리기</h1>
	<div class="row">
		<div style="width:60%; margin:25px auto">
			<form action="/prayers/<%=prayer._id%>/comments/" method="POST"> 
				<div class="form-group">
				    <label for="text">댓글</label>
					<input id="text" class="form-control" type="text" placeholder="댓글" name="comment[text]">
				</div>
				<div class="form-group">
					<label for="author">작성자</label>
					<input id="author" class="form-control" type="text" placeholder="글쓴이" name="comment[author]">
				</div>
				<div class="form-group">
					<button class="btn btn-primary btn-block">입력하기</button>
				</div>
			</form>
			<a href="/prayers/<%=prayer._id%>">목록으로...</a>
		</div>
	</div>
</div>
</div>
<%- include("../partials/footer") %>