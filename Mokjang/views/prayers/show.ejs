<%- include("../partials/header") %>
<div class="container">
	<div class="row">
		<div class="col-md-3">
			<p class="lead">Prayer</p>			
			<div class="list-group">
				<li class="list-group-item active"> list item 1</li>
				<li class="list-group-item"> list item 2</li>
				<li class="list-group-item"> list item 2</li>
			</div>
		</div>
		<div class = "col-md-9">
			<div class="card" >
			  <img src="<%= prayer.image %>" class="card-img-top" alt="prayer">
			  <div class="card-body">
				<h5 class="card-title"><%= prayer.title%></h5>
				<p class="card-text"><%=prayer.created.toDateString()%></p>
				<p class="card-text"><%-prayer.prayer%></p>
			  </div>
		      <div class="card-body text-right">
				<a class="btn btn-outline-primary" href="/prayers">Go to list...</a>
				<a class="btn btn-outline-secondary" href="/prayers/<%=prayer._id%>/edit">Edit</a>
				<form id="delete" action="/prayers/<%=prayer._id%>?_method=DELETE" method="POST"> 
					<button class="btn btn-outline-danger">Delete</button>
				</form>
			</div>
			</div>
			<div class="card" >
		      <div class="card-body text-right">
				<form action="/prayers/<%=prayer._id%>/comments/" method="POST"> 
					<div class="form-group">
						<input id="text" class="form-control" type="text" placeholder="댓글" name="comment[text]">
					</div>
					<div class="form-group">
						<input id="author" class="form-control" type="text" placeholder="글쓴이" name="comment[author]">
					</div>
					<div class="form-group">
						<button class="btn btn-outline-primary ">입력하기</button>
					</div>
				</form>
			  </div>
			  <div class="card-body">
				  <% prayer.comments.forEach(function(comment){ %>
				  <div class="row">
					<div class="col-md-6">
						<%= comment.author%>
					</div>
					<div class="col-md-6  text-right">
						<span class="created">10 days ago</span>
					 </div>
				  </div> 
				  <div class="row">
					<div class="col-md-12">
						<p><%= comment.text%></p>
 				    </div>
				  </div>
				  <% }); %>
			  </div> <!-- card0body -->
			</div> <!-- card -->
		</div>  <!-- row -->
	</div> <!-- container -->
<%- include("../partials/footer") %>
