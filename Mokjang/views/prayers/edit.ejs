<%- include("../partials/header") %>
<div class="container main"> 
<div class="container">
	<h1 style="text-align:center">Edit <%=prayer.title%></h1>
	<div class="row">
		<div style="width:30%; margin:25px auto">
			<form action="/prayers/<%=prayer._id%>?_method=PUT" method="POST"> 
				<div class="form-group">
				    <label for="prayerTitle">Title</label>
					<input id="prayerTitle" value="<%=prayer.title%>"class="form-control" type="text" name="prayer[title]">
				</div>
				<div class="form-group">
					<label for="prayerImage">Image</label>
					<input id="prayerImage" value="<%=prayer.image%>" class="form-control" type="text" name="prayer[image]">
				</div>
				<div class="form-group">
				    <label for="prayerPrayer">Prayer</label>
					<textarea id="prayerPrayer" class="form-control" name="prayer[prayer]"><%=prayer.prayer%></textarea>
				</div>
				<div class="form-group">
				<button class="btn btn-primary btn-block">Submit</button>
				</div>
			</form>
			<a href="/prayers"> Go Back</a>
		</div>
	</div>
</div>
</div>
<%- include("../partials/footer") %>